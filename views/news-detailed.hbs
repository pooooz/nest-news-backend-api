<div class="p-4 p-md-5 mb-4 rounded text-bg-dark">
  <img src="{{news.cover}}" class="card-img-top" alt="cat" style="height: 200px; object-fit: cover" />
  <h1 class="display-1 fst-italic">{{news.title}}</h1>
  <h4 class="card-subtitle mb-2 text-muted">Author: {{news.user.name}}</h4>
  <h5 class="lead my-3">Description: {{news.description}}</h5>
</div>
{{#if news.comments}}
  <p>Comments:</p>
  <ul class="row">
    {{#each news.comments}}
      <li class="list-group-item d-flex justify-content-between align-items-start mb-2" style="list-style: none">
        <img src={{this.user.avatar}} class="card-img-top" alt="cat" style="width: 64px; height: 64px; object-fit: contain" />
        <div class="ms-2 me-auto">
          <div class="fw-bold bold">{{this.user.name}}</div>
          {{this.text}}
        </div>
      </li>
    {{/each}}
  </ul>
{{else}}
  <h2>There are no comments here!</h2>
{{/if}}
<form action="/comments/{{news.id}}" method="post" enctype="application/json" class="p-4">
  <div class="form-group">
    <label for="authorEmail">Author</label>
    <input name="authorEmail" type="text" class="form-control" id="authorEmail" placeholder="Enter your name" />
  </div>
  <div class="form-group">
    <label for="text">Text</label>
    <textarea name="text" class="form-control" id="text" placeholder="Comment"></textarea>
  </div>
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>

