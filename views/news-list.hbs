{{#if news}}
  <h1>News</h1>
  <ul class="row">
    {{#each news}}
      <li class="col-lg-4 mb-2" style="list-style: none">
        <div class="card">
          <img src="{{this.cover}}" class="card-img-top" alt="cat" style="height: 200px; object-fit: cover" />
          <div class="card-body">
            <a href="/news/{{this.id}}/detail">
              <h5 class="card-title">{{this.title}}</h5>
            </a>
            <h6 class="card-subtitle mb-2 text-muted">Author: {{this.user.name}}</h6>
            <p class="card-text">{{this.description}}</p>
          </div>
        </div>
      </li>
    {{/each}}
  </ul>
{{else}}
  <h1>No news</h1>
{{/if}}
<form action="/news" method="post" enctype="multipart/form-data" class="p-4">
  <div class="form-group">
    <label for="title">Title</label>
    <input name="title" type="text" class="form-control" id="title" placeholder="News title" />
  </div>
  <div class="form-group">
    <label for="authorEmail">Author</label>
    <input name="authorEmail" type="text" class="form-control" id="authorEmail" placeholder="Enter your email" />
  </div>
  <div class="form-group">
    <label for="coverSrc">Cover link</label>
    <input name="coverSrc" type="text" class="form-control" id="coverSrc" placeholder="https://i.pinimg.com/736x/f4/d2/96/f4d2961b652880be432fb9580891ed62.jpg"/>
  </div>
  <div class="form-group">
    <label for="cover">Cover file</label>
    <input name="cover" type="file" class="form-control" id="cover" placeholder="Description" />
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" class="form-control" id="description" placeholder="Description"></textarea>
  </div>
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
